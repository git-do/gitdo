
<header id="page-header">
  <h1>Manage Repositories</h1>
  <div id="user-info">
    <span class="user-avatar" style="background-image: url(<%- user.avatar %>);"></span>
    <a class="user-name" href="#"><%- user.name %> <span class="icon-arrow-down"></span></a>
    <div class="user-logout">
      <a class="btn" href="/auth/logout">Logout</a>
    </div>
  </div>
</header>

<div id="content-wrap">
  <div id="main">
    <header class="section-header">
      <h2 class="section-title">Repositories</h2>
    </header>
    
    <ul id="repo-manager" class="list">
      <% for (var i = 0; i < repos.length; i++) {%>
        <li>
          <h3 class="list-heading"><%- repos[i].fullname.split('/')[1] %></h3>
          <div class="switch">
            <% if (repos[i].gitdo) {%>
              <input type="checkbox" checked="checked" name="<%- repos[i].fullname.split('/')[1] %>" class="switch-checkbox" id="myswitch<%- i %>" />
            <%}else {%>
              <input type="checkbox" name="<%- repos[i].fullname.split('/')[1] %>" class="switch-checkbox" id="myswitch<%- i %>" />
            <% } %>
            <label class="switch-label" for="myswitch<%- i %>">
                <div class="switch-inner"></div>
                <div class="switch-handle"></div>
            </label>
          </div>
        </li>
      <% } %>
    </ul>
    
  </div>
